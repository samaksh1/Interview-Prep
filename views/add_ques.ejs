  <div class="container border border-white p-5 mt-5">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <form action="/topic/add_ques" method="POST">
          <div class="form-group row">
            <label for="Problem" class="col-sm-2 col-form-label">Problem</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="title" name="problem" placeholder="Problem Name" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="linkto" class="col-sm-2 col-form-label">Problem Link</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="snippet" name="linkto" placeholder="Link to the problem">
            </div>
          </div>
          <div class="form-group row">
            <label for="topic" class="col-sm-2 col-form-label">Topic</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="topic" name="topic" placeholder="Topic Name">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>

